<UserControl x:Class="KeycardMenagmentSystem.View.Logs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeycardMenagmentSystem.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView Name="LogList" ItemsSource="{Binding Logs}"  BorderBrush="Black" >
            <ListView.View >
                <GridView >
                    <GridViewColumn DisplayMemberBinding="{Binding AccessPoint}" Header="Access point" />
                    <GridViewColumn DisplayMemberBinding="{Binding Date}" Header="Date" />
                    <GridViewColumn DisplayMemberBinding="{Binding Time}" Header="Time"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Keycard}" Header="Keycard"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Firstname}" Header="Firstname"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Lastname}" Header="Lastname"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Succesfull}" Header="Succesfull"/>
                    <GridViewColumn DisplayMemberBinding="{Binding NoAttempts}" Header="Number of attempts"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
